standby_mode = 'on'
primary_conninfo = 'host=<%= node[:postgresql][:master_host] %> port=5432 user=replication'
<% archive_dir = node[:postgresql][:config][:archive_dir] -%>
restore_command = 'cp <%= archive_dir %>/%f %p'
archive_cleanup_command = '/usr/pgsql-9.1/bin/pg_archivecleanup <%= archive_dir %> %r'
