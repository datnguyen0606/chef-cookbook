<% pgsql = node[:postgresql][:config] -%>
<% pg_version = node[:postgresql][:version] -%>

data_directory = '/var/lib/postgresql/<%= pg_version -%>/main'
hba_file = '/etc/postgresql/<%= pg_version -%>/main/pg_hba.conf'
ident_file = '/etc/postgresql/<%= pg_version -%>/main/pg_ident.conf'
external_pid_file = '/var/run/postgresql/<%= pg_version -%>-main.pid'
port = 5432
max_connections = 100
unix_socket_directory = '/var/run/postgresql'
ssl = <%= pgsql[:ssl] ? 'on' : 'off' %>
shared_buffers = 24MB
log_line_prefix = '%t '
datestyle = 'iso, mdy'
default_text_search_config = 'pg_catalog.english'
listen_addresses = '<%= pgsql[:listen_addresses].join(',') %>'
log_min_duration_statement = <%= pgsql[:log_min_duration_statement] %>
max_locks_per_transaction = <%= pgsql[:max_locks_per_transaction] %>

<% if pg_version.to_f >= 9.1 -%>
max_pred_locks_per_transaction = <%= pgsql[:max_pred_locks_per_transaction] %>
<% end -%>
